---
interface Props {
	title: string;
	description: string;
	href: string;
	img: string;
	technologies: string;
}
const { href, title, description, img, technologies} = Astro.props;
---
<li class="link-card">
	<a class="redirect" href={href} target="_blank" rel="noopener noreferrer">
		<picture>
			<img src={img} alt={`image of project ${title}`} class="w-full h-32 sm:h-48 object-cover rounded-md"/>
		</picture>
		<div class="px-2">
			<h2 class="title"> {title} <span>&rarr;</span> </h2>
			<details name="cookies">
				<summary>Description</summary>
				<p> {description} </p>
			</details>
			<em> {technologies} </em>
		</div>
	</a>
</li>
<style>
	.link-card {
		background-color: #171B20;
		width: 100%;
		list-style: none;
		display: flex;
		background-image: none;
		background-size: cover;
		border-radius: 6px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 2px 10px 2px rgba(255, 255, 255, 0.4);
	}
	.link-card > .redirect {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 8px;
		color: white;
		opacity: 0.8;
	}
	.title {
		font-family: 'Courier New', Courier, monospace;
		margin: 0;
		font-size: 1.125rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	span {
		font-size: 30px;
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card:is(:hover, :focus-within) span {
		transform: translateX(6px);
	}
	.description {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		scale: 1.02;
		transition-duration: 1.5s;
		border-radius: 6px;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
	em {
		font-size: 16px;
		font-weight: bold;
		color: rgb(var(--accent));
	}

	@media screen and (max-width: 767px) {
		.link-card {
			min-width: 280px;
		}
	}
</style>
